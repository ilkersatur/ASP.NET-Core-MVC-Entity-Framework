            <td> <input type="text" asp-for="KitapAdi"/></td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(k=>k.KategoriID)</td>
            @*<td> <input type="text" asp-for="KategoriID" /></td>*@
