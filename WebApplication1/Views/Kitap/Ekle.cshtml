            <td> <input type="file" name="Dosya" /></td>
        </tr>



        <tr>
            <td></td>
            @*<td><input type="submit" value="KAYDET" onclick="return KontrolEt()" /></td>*@
            <td><input type="submit" value="KAYDET" /></td>
        </tr>
    </table>
   
</form>

