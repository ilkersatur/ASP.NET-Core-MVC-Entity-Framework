@model WebApplication1.Models.Kitap
<script>
    function KontrolEt()
    {
        let kontrols = document.getElementsByTagName("input");
        let sayac=0;
        for(let i=0;i<kontrols.length;i++)
        {
            let msg="";
            if(kontrols[i].type=="text" && kontrols[i].value=="")
                //alert(kontrols[i].name);
                {
                    msg += kontrols[i].name + "";                            sayac++;
                }

        }
        if(sayac !=0)
        {
          let div=document.getElementById("mesaj");
          div.innerHTML =  "Boş geçemezsiniz...";
        }
        //alert(sayac);
        return sayac ==0 ? true:false;
         
    }
</script>

